<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Spinner
            android:layout_width="100dp"
            android:layout_height="51dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/spinner1"
            app:layout_constraintHorizontal_bias="0.096" app:layout_constraintVertical_bias="0.26"/>
    <Spinner
            android:layout_width="100dp"
            android:layout_height="51dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/spinner2"
            app:layout_constraintVertical_bias="0.26" app:layout_constraintHorizontal_bias="0.372"/>
    <Spinner
            android:layout_width="100dp"
            android:layout_height="51dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/spinner3"
            app:layout_constraintHorizontal_bias="0.668" app:layout_constraintVertical_bias="0.26"/>
    <TextView
            android:text=""
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/text"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.103"/>
    <TextView
            android:text="1 ~ 9 사이의 숫자를 입력하세요!"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/textView3"
            app:layout_constraintVertical_bias="0.201"/>
    <ListView
            android:id="@+id/listView"
            android:layout_width="556dp"
            android:layout_height="455dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.679"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent">
    </ListView>
    <Button
            android:text="check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/chkBtn"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.915" app:layout_constraintVertical_bias="0.263"/>
    <Button
            android:text="replay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/replayBtn"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.896"/>

</androidx.constraintlayout.widget.ConstraintLayout>