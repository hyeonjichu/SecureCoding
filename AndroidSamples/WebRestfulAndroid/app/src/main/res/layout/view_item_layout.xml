<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        tools:context=".MainActivity">

    <TextView
            android:text="title"
            android:textAlignment="center"
            android:textSize="17dp"
            android:layout_width="516dp"
            android:layout_height="39dp" android:id="@+id/titleText"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.108" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="id"
            android:layout_width="148dp"
            android:layout_height="25dp" android:id="@+id/idText"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.89" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="40dp"/>
    <TextView
            android:text="readCnt"
            android:layout_width="134dp"
            android:layout_height="25dp" android:id="@+id/readCntText"
            app:layout_constraintStart_toEndOf="@+id/idText" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="200dp"
            app:layout_constraintVertical_bias="0.89" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="date"
            android:layout_width="228dp"
            android:layout_height="25dp" android:id="@+id/dateText"
            app:layout_constraintStart_toEndOf="@+id/idText" app:layout_constraintEnd_toStartOf="@+id/readCntText"
            app:layout_constraintTop_toBottomOf="@+id/titleText" app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>